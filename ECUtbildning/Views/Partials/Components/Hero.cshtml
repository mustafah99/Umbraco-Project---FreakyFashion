@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage

@{
    var image = Model.Value<IPublishedContent>("heroImage");
}

<div style="display: flex; flex-direction: row-reverse; border: 1px solid black; padding: 30px 0; padding-left: 15px; text-align: left;" class="hero">
    <img src="@image.Url()" class="card-img-top" alt="...">
    <div class="card-body">
        <h2 class="card-title">@Model.Value("heroHeading")</h2>
        <p style="font-size: 18px; padding-right: 20px;" class="card-text">@Model.Value("heroMessage")</p>
        <a style="font-size: 18px;" href="@Model.Value("heroButtonLink")" class="btn btn-primary">Go Somewhere With This Button</a>
    </div>
</div>
